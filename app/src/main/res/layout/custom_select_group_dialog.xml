<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="280dp"
    android:layout_height="170dp"
    android:layout_centerInParent="true"
    android:layout_gravity="center"
    android:elevation="5dp"
    app:cardCornerRadius="15dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/darkBlue">

        <TextView
            android:id="@+id/select_group_dialog_confirm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="22dp"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/mapo_peacefull"
            android:text="확인"
            android:textColor="@color/white"
            android:textSize="21sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/select_group_dialog_confirm"
            android:layout_marginStart="23dp"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/jsdongkang_regular"
            android:text="해당 그룹의 목적지로 설정하시겠습니까?"
            android:textColor="@color/snow"
            android:textSize="13sp" />

        <ImageButton
            android:id="@+id/btn_select_group_dialog_ok"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="22dp"
            android:layout_marginBottom="20dp"
            android:background="@drawable/round_button_skyblue_low_rounding"
            android:padding="13dp"
            android:src="@drawable/ic_check"
            tools:ignore="ContentDescription" />

        <ImageButton
            android:id="@+id/btn_select_group_dialog_cancel"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="20dp"
            android:layout_toStartOf="@id/btn_select_group_dialog_ok"
            android:background="@drawable/round_button_east_bay"
            android:padding="13dp"
            android:src="@drawable/ic_cancel"
            tools:ignore="ContentDescription" />

    </RelativeLayout>

</androidx.cardview.widget.CardView>